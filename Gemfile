source 'https://rubygems.org'

gem 'rake'

# jekyll, which builds it all
# 3.0 includes sass processing
gem 'jekyll', '~>3.1'

# Jekyll extensions
gem 'jekyll-redirect-from'
gem 'jekyll-paginate'

# JSON
gem 'json'

# For `rake watch`
gem 'rb-fsevent'

# For markdown header cleanup
gem 'sanitize'

# Markdown
gem 'redcarpet'

# Syntax highlighting
gem 'pygments.rb'
